
<hr>
<h3><%= @event.name %></h3>
<%= @event.description %><br><br>
<b>Starts: </b><%= @instance.start.strftime("%b. %d, %Y") %><br><br>
<b>Ends: </b><%= @instance.end.strftime("%b. %d, %Y") %><br><br>
<b>Guests:</b><br>
  <% if @attendees.count == 0 %>
    No guests added.<br>
  <% else %>
    <% @attendees.each do |attendee| %>
      <li><%= attendee.first_name %> <%= attendee.last_name %></li><br>
    <% end %>
  <% end %>

<br>
<%= form_for @attendee do |f| %>
  <%= f.hidden_field :event_id, :value => @event.id %>
  <%= f.text_field :first_name, :placeholder => "First Name" %>
  <%= f.text_field :last_name, :placeholder => "Last Name" %>
  <br><br>
  <%= f.text_field :email, :placeholder => "Email" %>
  <br><br>
  <%= f.submit "Add Guest" %>
<% end %>
<br><br>

<%= link_to "Edit Instance", edit_event_event_instance_path(@event) %> |

<%= link_to "Edit ALL Instances", edit_event_path(@event) %>

<br><br>

<%= link_to "Delete Instance", event_event_instance_path(@event), method: :delete, data: { confirm: "Are you sure?" } %> |

<%= link_to "Delete ALL Instances", @event, method: :delete, data: { confirm: "Are you sure?" } %>

