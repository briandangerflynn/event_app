
<%= link_to "Create Event", :new_event %>
<%= form_tag(event_event_instances_path(@events), method: :get) do %>
  <%= date_field_tag :start, params[:start] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>
<hr>

<% @instances.each do |instance| %>
  <% @events.each do |event| %>
    <% if instance.event_id == event.id %>
      <%= instance.start.strftime("%b. %d, %Y") %> <br>
      <%= link_to event.name, event_event_instance_path(event, instance) %><br><br>
    <% end %>
  <% end %>
<% end %>
