<hr>
<%= form_for @event do |f| %>
  <%= f.text_field :name, :placeholder => "Event Name" %>
  <br><br>
  <%= f.text_area :description, :placeholder => "Description" %>
  <br><br>
  <%= f.label "Start Time", :start %>
  <%= f.datetime_field :start %>
  <br><br>
  <%= f.label "End Time", :end %>
  <%= f.datetime_field :end %>
  <br><br>
  <%= f.select :recurring, options_for_select(recurring_options) %>
  <br><br>
  <%= f.label(:reminder, "Send 24 Hour Reminder?") %>
  <br>
  <%= f.check_box :reminder %>
  <br><br>
  <%= f.submit "Update Event" %>
<% end %>
